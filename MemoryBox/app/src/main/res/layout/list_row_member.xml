<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:padding="1dp">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#3AB6AB"
            android:contentDescription="@string/gallery_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imagePhotoSelected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_check_box"
            app:layout_constraintBottom_toBottomOf="@+id/img_video"
            app:layout_constraintEnd_toEndOf="@+id/img_video" />
</androidx.constraintlayout.widget.ConstraintLayout>